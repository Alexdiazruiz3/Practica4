<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCiudades">

    <!-- TODO: Update blank fragment layout -->

    <RadioGroup
        android:id="@+id/grpCiudades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioMadrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Madrid" />

        <RadioButton
            android:id="@+id/radioParis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paris" />

        <RadioButton
            android:id="@+id/radioLondres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Londres" />

        <RadioButton
            android:id="@+id/radioRoma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Roma" />

        <RadioButton
            android:id="@+id/radioBerlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Berlín" />

        <RadioButton
            android:id="@+id/radioLisboa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lisboa" />

        <RadioButton
            android:id="@+id/radioBruselas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bruselas" />

        <RadioButton
            android:id="@+id/radioAtenas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Atenas" />

        <RadioButton
            android:id="@+id/radioAmsterdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amsterdam" />

        <RadioButton
            android:id="@+id/radioMoscu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Moscú" />
    </RadioGroup>
</FrameLayout>